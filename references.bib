author = {Bures, J. and Fenton, A. A. and Kaminsky, Yu and Rossier, J. and Sacchetti, B. and Zinyuk, L.},
doi = {10.1098/rstb.1997.0138},
file = {:home/andrey/Downloads/9368940.pdf:pdf},
