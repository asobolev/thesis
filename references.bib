publisher = {The Author(s)},
title = {{Manipulating Hippocampal Place Cell Activity by Single-Cell Stimulation in Freely Moving Mice}},
url = {https://doi.org/10.1016/j.celrep.2018.03.031},
volume = {23},
year = {2018}
}
@article{Diekelmann2010,
