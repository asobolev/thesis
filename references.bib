journal = {Hippocampus},
keywords = {CA1,Consolidation,Memory,Microstimulation,Sharp-wave ripple events},
number = {1},
pages = {1--10},
pmid = {19816984},
title = {{Disruption of ripple-associated hippocampal activity during rest impairs spatial learning in the rat}},
volume = {20},
year = {2010}
