journal = {PLoS computational biology},
number = {1},
pages = {e1004032},
pmid = {25615592},
title = {{Laminar and Dorsoventral Molecular Organization of the Medial Entorhinal Cortex Revealed by Large-scale Anatomical Analysis of Gene Expression.}},
