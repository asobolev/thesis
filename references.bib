keywords = {Global level,Local level,Model-based prediction,Sensory-motor map,Variable prediction horizon},
pages = {352--364},
publisher = {Elsevier B.V.},
title = {{A two level real-time path planning method inspired by cognitive map and predictive optimization in human brain}},
url = {http://dx.doi.org/10.1016/j.asoc.2014.03.038},
volume = {21},
year = {2014}
